{
    "name": "Outlier Detection",
    "description": "To detect outliers in labelled and unlabelled datasets",
    "templates": [
        {
            "name": "Overview",
            "isOverview": true,
            "description": "Overview board for outlier detection templates",
            "folderName": "outlier_detection_overview-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/outlier_detection --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=outlier_detection_overview",
            "files": [
                {
                    "contentType": "board",
                    "path": "outlier_detection_overview/outlier_detection_overview.board"
                }
            ]
        },
        {
            "name": "Autoencoder",
            "isOverview": false,
            "description": "To detect outliers by training an autoencoder on clean data and finding poorly reconstructed data",
            "folderName": "autoencoder-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/outlier_detection --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=autoencoder",
            "files": [
                {
                    "contentType": "board",
                    "path": "autoencoder/autoencoder.board"
                },
                {
                    "contentType": "notebook",
                    "path": "autoencoder/autoencoder.ipynb"
                }
            ]
        },
        {
            "name": "Bayesian Supervised",
