{
    "name": "Design of Experiments",
    "description": "To design a task that studies the relationship between input and output variables",
    "templates": [
        {
            "name": "Overview",
            "isOverview": true,
            "description": "Overview board for design of experiments templates",
            "folderName": "doe_overview-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/design_of_experiments --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=doe_overview",
            "files": [
                {
                    "type": "board",
                    "path": "doe_overview/doe_overview.board",
                    "active": true
                }
            ]
        },
        {
            "name": "Bayesian Optimization",
            "isOverview": false,
            "description": "To optimize the parameters using a bayesian model",
            "folderName": "bayesian_optimization-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/design_of_experiments --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=bayesian_optimization",
            "files": [
                {
                    "type": "board",
                    "path": "bayesian_optimization/bayesian_optimization.board",
                    "active": true
                },
                {
                    "type": "notebook",
                    "path": "bayesian_optimization/bayesian_optimization.ipynb"
                },
                {
                    "type": "file",
                    "path": "bayesian_optimization/README.md",
                    "active": true
                }
            ]
        },
        {
            "name": "Bayesian Modelling",
            "isOverview": false,
            "description": "To estimate the parameters by modelling parametrized equations",
            "folderName": "bayesian_modelling-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/design_of_experiments --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=bayesian_modelling",
            "files": [
                {
                    "type": "board",
                    "path": "bayesian_modelling/bayesian_modelling.board",
                    "active": true
                },
                {
                    "type": "notebook",
                    "path": "bayesian_modelling/bayesian_modelling.ipynb"
                },
                {
                    "type": "file",
                    "path": "bayesian_modelling/README.md",
                    "active": true
                },
                {
                    "type": "file",
                    "path": "bayesian_modelling/classical_designs.py"
                }
            ]
        },
        {
            "name": "Classical Doe",
            "isOverview": false,
            "description": "To estimate the parameters if all trials have to be run in parallel",
            "folderName": "classical_doe-{{user.name}}-{{timestamp}}",
            "command": "--no-input --directory use_case_templates/design_of_experiments --output-dir {{output-dir}} timestamp={{timestamp}} author_name={{user.name}} use_case_name=classical_doe",
            "files": [
                {
                    "type": "board",
                    "path": "classical_doe/classical_doe.board",
                    "active": true
                },
                {
                    "type": "notebook",
                    "path": "classical_doe/classical_doe.ipynb"
                },
                {
                    "type": "file",
                    "path": "classical_doe/README.md",
                    "active": true
                },
                {
                    "type": "file",
                    "path": "classical_doe/classical_designs.py"
                },
                {
                    "type": "notebook",
                    "path": "classical_doe/best_parameters.ipynb"
                }
            ]
        }
    ]
}